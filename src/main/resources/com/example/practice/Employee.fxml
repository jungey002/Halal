<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.practice.EmployeeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Employee SCENE" />
    <Label fx:id="welcomeText" />
    <TextField fx:id="uid" promptText="EID" />
    <TextField fx:id="uname" promptText="Name" />
    <TextField fx:id="usalary" promptText="Salary" />
    <TextField fx:id="uphone" promptText="Phone" />
    <Button mnemonicParsing="false" text="Insert" onAction="#InsertData" />
    <Button mnemonicParsing="false" text="Update" onAction="#UpdateData" />
    <Button mnemonicParsing="false" text="Delete" onAction="#DeleteData" />
    <Button mnemonicParsing="false" text="LoadData" onAction="#LoadData" />
    <Button onAction="#fetchData" text="Fetch" />
    <TableView fx:id="employee_tbl" prefHeight="200.0" prefWidth="327.0">
        <columns>
            <TableColumn fx:id="eid" prefWidth="75.0" text="EID" />
            <TableColumn fx:id="name" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="salary" prefWidth="75.0" text="Salary" />
            <TableColumn fx:id="phone" prefWidth="75.0" text="Phone" />
        </columns>
    </TableView>
</VBox>
